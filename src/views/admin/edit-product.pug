extends ../layouts/base.pug

block head 
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
    title Edit Product

block body
    span This page is not secure, change the hidden input
    main
        form.product-form(method="post")
            div.form-control
                input(type="hidden", id="id", name="id", value=`${product.id}`)
                input(type="hidden", id="image", name="image", value=`${product.image}`)
                
                label(for="title") Title
                input#title(type="text", name="title", value=`${product.title}`, required)
                
                label(for="price") Price
                input#price(type="text", name="price", value=`${product.price}`, pattern="^\\d{1,}(\\.\\d{1,2})?$", required)
                
                label(for="description") Description
                input#description(type="text", name="description", value=`${product.description}`, required)

                label(for="available") Quantity Available
                input#available(type="number", name="available", value=`${product.available}`, required)

            button(type="submit") Update Product